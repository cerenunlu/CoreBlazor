@page "/users"
@layout MainLayout
@inject IJSRuntime js
@using FM.DTOs
@inject HttpClient Http
@inject NavigationManager navigationaManager

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">User List</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th> ID</th>
                                <th> Name</th>
                                <th> Surname</th>
                                <th> Email</th>
                                <th> Role</th>
                                <th>Setting</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in userList)
                            {
                                <tr>

                                    <td>
                                        <span class="pl-2">@item.ID</span>
                                    </td>
                                    <td> @item.Name </td>
                                    <td> @item.Surname </td>
                                    <td> @item.Email </td>
                                    <td> @item.RoleID </td>

                                    <td>
                                        <div class="badge badge-outline-success">Edit</div>
                                        <div class="badge badge-outline-danger">Delete</div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    List<UserDto> userList = new List<UserDto>();
    protected async override Task OnInitializedAsync()
    {
       
         userList = await Http.GetFromJsonAsync<List<UserDto>>("User/GetAll");
    }
   

}
